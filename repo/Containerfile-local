FROM nginx:alpine

# Install gosu for privilege dropping and performance tools
RUN apk add --no-cache gosu \
    && rm -rf /var/cache/apk/*

# Optimize nginx worker processes for containers
# This will be overridden by nginx.conf but helps with initial setup
ENV NGINX_WORKER_PROCESSES=auto
ENV NGINX_WORKER_CONNECTIONS=4096

# Copy the optimized nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Copy the entrypoint script
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Create nginx cache directory for better performance
RUN mkdir -p /var/cache/nginx/client_temp \
             /var/cache/nginx/proxy_temp \
             /var/cache/nginx/fastcgi_temp \
             /var/cache/nginx/uwsgi_temp \
             /var/cache/nginx/scgi_temp \
    && chown -R nginx:nginx /var/cache/nginx

# Expose port 80 (changed from 8080 to match nginx.conf)
EXPOSE 80

ENTRYPOINT ["/entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]
